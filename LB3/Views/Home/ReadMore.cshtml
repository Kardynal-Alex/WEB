@model Lb3.Models.Article

 <div class="container">
        <div class="row">
            <div class="col">
                <div class="card shadow-sm">
                     @if (Model.Image != null)
                        {
                                <img class="card-img-top" alt="Card image cap"
                                     src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" />
                        }
                    <div class="card-body">
                        <h1 class="card-title display-4">@Model.Title</h1>
                        <p class="card-text">
                        <p class="lead">@Model.Text
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>