@model Lb3.Models.Register

<link rel="stylesheet" href="~/css/sign_in.css" />
<div>
  <main class="form-signin">
    <div class="card bg-light">
      <div class="card-body">
        <form  asp-action="SignUp" method="post">
          <a href="../index.html"><img class="mb-4" src="~/logos.png" alt="brand image" width="150"
              height="100"></a>
          <h1 class="h3 mb-3 fw-normal">Create your account</h1>

          <input asp-for="Name" type="text" id="inputUsername" class="form-control" placeholder="Username" required>

          <input asp-for="Email" type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
          <input type="password"  asp-for="Password" class="form-control" placeholder="Password" required>

          <label asp-for="DateOfBirth"  class="form-label">Date of birth </label>
          <input asp-for="DateOfBirth" type="date" id="date" class="rounded" />

          <div class="mt-lg-2">
            <button class="p-2 w-100 btn btn-sm btn-dark" type="submit">Create account</button>
          </div>
        </form>
      </div>
    </div>
  </main>
</div>
